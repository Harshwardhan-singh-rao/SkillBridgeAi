/**
 * @fileoverview Firestore Security Rules for SkillBridge AI.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user profiles and learning paths.
 * Mentors and UserMentorConnections have more open access, with certain restrictions.
 *
 * Data Structure:
 * - /users/{userId}/userProfile: User profile data, owned by the user.
 * - /users/{userId}/learningPaths/{learningPathId}: Learning paths, owned by the user.
 * - /mentors/{mentorId}: Mentor profiles, potentially managed by admins (not yet implemented).
 * - /userMentorConnections/{userMentorConnectionId}: Connections between users and mentors.
 *
 * Key Security Decisions:
 * - User listing is disabled to protect privacy.
 * - Data validation is limited to ownership checks and relational integrity (userId consistency).
 * - The rules prioritize strict authorization and flexible data shapes for rapid prototyping.
 *
 * Denormalization for Authorization:
 * - The `userId` field is included in `/users/{userId}/learningPaths/{learningPathId}` documents
 *   to avoid costly `get()` calls when checking ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-ownership for user profiles. Only the user can read and write their own profile.
     * @path /users/{userId}/userProfile
     * @allow (create) User with ID 'user123' creates their own profile with 'id': 'user123'.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own profile.
     * @deny (create) User with ID 'user456' tries to create a profile for 'user123'.
     * @deny (get, update, delete) User with ID 'user456' tries to read/update/delete the profile of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/userProfile {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false; // User listing is disabled for privacy

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id; // Enforce immutability of userId
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces user-ownership for learning paths. Only the user can read and write their own learning paths.
     * @path /users/{userId}/learningPaths/{learningPathId}
     * @allow (create) User with ID 'user123' creates a learning path with 'userId': 'user123'.
     * @allow (get, update, delete) User with ID 'user123' reads/updates/deletes their own learning path.
     * @deny (create) User with ID 'user456' tries to create a learning path for 'user123'.
     * @deny (get, update, delete) User with ID 'user456' tries to read/update/delete the learning path of 'user123'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/learningPaths/{learningPathId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; // Enforce immutability of userId
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to mentor profiles. Currently allows any signed-in user to read mentors.
     *              Write access is not yet restricted (TODO: Implement admin roles for mentor management).
     * @path /mentors/{mentorId}
     * @allow (get, list) Any signed-in user can read mentor profiles.
     * @deny (create, update, delete) Any signed-in user cannot yet modify mentor profiles (TODO: Implement admin roles).
     * @principle Allows public read access, but restricts writes (TODO: Implement proper write restrictions).
     */
    match /mentors/{mentorId} {

      allow get, list: if true; // Public read access for mentors

      // TODO: Add admin role check for create, update, delete
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to user-mentor connections.
     *              Allows a user to create a connection for themselves (request.auth.uid == request.resource.data.userId).
     *              Requires authentication for all operations.
     * @path /userMentorConnections/{userMentorConnectionId}
     * @allow (create) User with ID 'user123' creates a connection with 'userId': 'user123'.
     * @allow (get, list, update, delete) Only the resource can be accessed
     * @deny (create) User with ID 'user456' tries to create a connection for 'user123'.
     * @principle Enforces user ownership for connection creation.
     */
    match /userMentorConnections/{userMentorConnectionId} {

      allow get: if request.auth != null;
      allow list: if false;

      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }
  }
}